# アプリケーション設定
NODE_ENV=development
PORT=3000

# フロントエンド設定
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# データベース設定 (PlanetScale)
DATABASE_URL=mysql://user:password@localhost:3306/vsmaze
DATABASE_NAME=vsmaze

# JWT認証設定
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=86400  # 24時間（秒）

# AI実行環境設定
AI_MEMORY_LIMIT=512M
AI_CPU_TIME_LIMIT=30
AI_CONTAINER_PREFIX=vsmaze-ai

# レート制限設定
RATE_LIMIT_WINDOW_MS=60000  # 1分
RATE_LIMIT_MAX_REQUESTS=60  # 1分あたりの最大リクエスト数

# ログ設定
LOG_LEVEL=debug  # development環境ではdebug、production環境ではinfo
LOG_FORMAT=json  # ログフォーマット（jsonまたはtext）

# セキュリティ設定
CORS_ORIGIN=http://localhost:3000  # フロントエンドのURL
